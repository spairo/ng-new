@import 'main'

h1
  font 18px 'Stag Sans medium'

.panel
  h1
    &.detail
      font 16px 'Stag Sans Book'

  label
    color: $color('gray', 'pale')

  &.active
    min-height: 170px
    margin-bottom: 10px
    padding: 0 20px
    font-size: 13px
    line-height: 2em
    overflow: hidden

    .amount
      color: $color('blue', 'medium')

  .detail-coupons
    .link
      color: $color('blue', 'medium')
      cursor: pointer

  &.detail
    font-size: 13px
    margin-bottom: 20px
    min-height: 662px
    padding: 0 20px

    .field
      display: block
      height: 42px

      label
        color: $color('gray', 'pale')

      .see-more
        color $color('blue', 'medium')
        cursor pointer
        font-size 14px

        &:hover
          text-decoration underline

    p
      &.description
        height: 80px
      &.description-pdf
        min-height: 10px


    .traffic-light
      border-radius: 50%
      cursor: help
      height: 15px
      margin-right: 10px
      vertical-align: middle
      width: 15px

      &.tooltip
        .content
          margin: -45px 0 0 -20px
          width: 250px

          &:after
            left: 10%
  &.tracing-pdf
    font-size: 13px
    height: 150px
    margin-bottom: 20px
    padding-left: 20px
  &.tracing
    font-size: 13px
    height: 440px
    margin-bottom: 20px
    padding-left: 20px

    a
      margin-top: 30px
      text-align: center
      text-decoration: none

      &:hover
        text-decoration: underline

    .chart-bar
      display: inline-block !important
      margin: 20px 0 20px 20px

    .categories
      display: inline-block
      margin-left: 25px
      position: absolute
      top: 85px
      width: 165px

      .grid
        display: inline-block
        margin-bottom: 8px
        width: 100%

        .square
          display: inline-block
          height: 15px
          margin-right: 3px
          vertical-align: middle
          width: 15px

    h3
      color: $color('blue')
      margin: 0 0 25px

    i
      .content
        margin: -45px 0 0 -160px
        width: 180px

        &:after
          margin-left: 65px

    label
      color: $color('gray', 'pale')

    .row
      margin-bottom: 10px

      .amount
        color: $color('blue', 'medium')

      &.border-top
        border-top: 1px solid $color('gray', 'light')
        padding-top: 15px

    .performance-to
      border-left: 3px solid $color('green')
      border-right: 3px solid $color('green')
      margin-bottom: 20px
      text-align: center
      .link
        color: $color('blue', 'medium')
        cursor: pointer


    .performance-to-detail
      border-left: 3px solid $color('green')
      border-right: 3px solid $color('green')
      margin-bottom: 20px
      margin-top: 40px
      text-align: center
      padding: 10px 0

      a
        margin-top: 15px

      span
        color: $color('green')
        font-size: 18px

    .total-performance
      border-left: 3px solid $color('blue', 'medium')
      border-right: 3px solid $color('blue', 'medium')
      margin-bottom: 20px
      padding: 10px 0
      text-align: center

      span
        color: $color('blue', 'medium')
        font-size: 18px


  &.portfolio
    background: $color('gray','degraded1')
    border: 1px solid $color('gray', 'whiteSmoke')
    margin-bottom: 0
    max-height: 1378px
    padding: 10px
    position: relative

    h1
      margin: 10px 0 20px
      width: 200px

    .categories
      font-size: 12px
      //height: 840px
      margin-top: 20px
      overflow: auto

      .grid
        display: inline-block
        margin-bottom: 8px
        width: 100%

        .square
          display: inline-block
          height: 15px
          margin-right: 5px
          vertical-align: middle
          width: 15px

          span
            color: $color('white')
            cursor: pointer
            font-size: 1.22em
            line-height: 16px
            padding-left: .12em

            &.less
              font-size: 1.7em
              line-height: 10px
              padding-left: .15em

        table
          margin-top: 10px
          &.list
            border: 0

            td
              border: 0
              cursor: default
              height: 25px
              padding: 0 20px
              text-align: left
              white-space: normal

    .description
      background-color: $color('blue', 'whiteBlue')
      border: 1px solid $color('blue', 'medium')
      font-size: 13px
      padding: 0 15px

    .export-pdf
      position: absolute
      right: 10px
      top: 30px

    .graphics
      canvas
        &.chart-pie
          height: 220px !important
          margin: 0 35px
          width: 220px !important

    .total-amount
      color: $color('gray', 'pale')
      margin: 15px 0
      text-align: center

      .amount
        font-size: 25px

      span
        display: block

      .txt-amount
        font-size: 13px

.row
  &.portfolio
    margin-top: 20px

    label
      display: block
      font-size: 13px
      margin-bottom: 5px

.show-more-table
  background-color: $color('white')
  border: 1px solid $color('gray', 'whiteSmoke')
  border-radius: 6px
  bottom: -11px
  display: inline-block
  left: 50%
  margin-left: -12px
  padding: 5px 5px 0 5px
  position: absolute

  span
    cursor: pointer

    &.down
      $icon-after('sorter', 12px, 12px)
      &:after
        background-position: -5px -5px
        margin: 0

      &.up
        $icon-after('sorter', 12px, 12px)
        &:after
          background-position: -27px -5px

.title-portfolio
  color: $color('blue')

td
  &.hasTooltip
    white-space: normal

  .traffic-light
    border-radius: 50%
    cursor: help
    height: 15px
    width: 15px

    &.tooltip
      .content
        margin: -40px 0 0 -120px
        width: 250px

.detail-pdf-icon
  margin: -15px 0px

.performance-to
  margin-top 40px

i.burger
    background: url(/assets/icons/burger.png) no-repeat;
    height: 25px;
    width: 25px;
    background-position: 0px -3px;
    background-size: initial;


.disclaimer
  float: left
  font-size: 13px
  margin-bottom: 20px
  padding-right: 10px
  width: 100%

  .txt
    background: $color('gray', 'degraded1')
    border: 1px solid $color('gray', 'light')
    border-radius: 5px
    float: left
    margin: 10px 0
    padding: 0 10px 10px 10px
    width: 100%

    .strong
      font-weight: bold
