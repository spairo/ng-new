@import 'main'

.select
	cursor: pointer
	font-size: 13px
	position: relative
	width: 100%

	a
		background: $color('white') url('/assets/icons/select.png') no-repeat 98% center
		border: 1px solid $color('gray', 'whiteSmoke')
		border-radius: 5px
		color: $color('gray', 'pale')
		display: block
		height: 30px
		line-height: 20px
		overflow: hidden
		padding: 5px 10px
		text-align: center
		text-overflow: ellipsis
		white-space: nowrap

		&.open
			background-image: none

			&:after
				bottom: 6px
				color: $color('gray', 'pale')
				content: ''
				font-size: 12px
				font-family: cursive
				font-weight: bold
				position: absolute
				right: 7px

		&.selected
			color: $color('gray')
			text-align: left

		&.disabled
			background-color: $color('gray', 'whiteGray')
			cursor: default

	ul
		background-color: $color('white')
		border: 1px solid $color('gray', 'whiteSmoke')
		border-radius: 0 0 5px 5px
		border-top: none
		color: $color('gray')
		list-style-type: none
		margin: 0
		max-height: 150px
		overflow: auto
		padding: 10px
		position: absolute
		width: inherit
		z-index: 10

		input
			margin-bottom: 10px

		li
			line-height: 20px
			min-height: initial
			padding: initial

			&:hover
				background-color: $color('white')
				color: $color('blue', 'medium')

.ng-submitted
	.ng-invalid
		+.select
			a
				border: 1px solid $color('magenta')
