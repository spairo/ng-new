header
	display: inline-block
	margin-bottom: 10px
	width: 100%

	.corporate
		border-left: 5px solid $color('gray', 'pale')
		color: $color('gray', 'pale')
		display: inline-block
		font-size: 22px
		margin: 13px 0 0 20px
		padding: 15px

		span
			display: block

	img
		float: left

	.info-container
		float: right

		.info
			margin-top: 10px
			text-align: right
			width: 100%

			span
				&.date
					display: block
					font-size: 12px
					margin-top: 5px

				&.title
					color: $color('blue', 'medium')
					display: block
					font: 24px 'Stag Sans Book'
					margin-top: 10px

				&.user
					color: $color('blue')
					font-size: 13px
					margin-right: 15px
					text-transform: uppercase
