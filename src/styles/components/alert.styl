.alert
	background-color: $color('blue', 'whiteBlue')
	border: 1px solid $color('gray', 'whiteSmoke')
	font-size: 15px
	height: 45px
	margin-bottom: 20px
	padding: 7px 10px
	$icon-before('info', 24px, 32px)

	&.error
		background-color: $color('white')
		border: 1px solid $color('magenta')
		border-left: none
		border-right: none
		color: $color('magenta')
		padding: 10px
		$icon-before('error', 24px, 27px)
