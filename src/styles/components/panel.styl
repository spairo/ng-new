.panel
	border: 1px solid $color('gray', 'whiteSmoke')
	border-radius: 5px
	margin-bottom: 20px
	position: relative

	h1
		&.big
			border-bottom: 1px solid $color('gray', 'whiteSmoke')
			font-size: 25px
			padding: 10px 0 15px

	label
		&.dates
			color: $color('gray', 'pale')
			font-size: 13px
			text-align: left

	.title
		color: $color('blue')
		display: flex
		margin: 0 15px
		padding: 15px 5px
		text-transform: capitalize

		&.wrapper
			background-color: $color('gray', 'whiteGray')
			border-bottom: 1px solid $color('gray', 'whiteSmoke')
			border-top: 1px solid $color('gray', 'whiteSmoke')
			margin: 0 0 10px
			padding-left: 20px

.panel
.content-tab
	.col-tab
		border-right: 1px solid $color('gray', 'whiteSmoke')
		padding-right: 0

		&:last-child
			border:0

		input
			margin-top: -5px

		.title
			color: $color('blue')
			font-size: 15px
			margin: 15px 0 25px
			text-align: center

	.container
		display: inline-block
		margin: 0 10px
		width: 98%

		.field
			display: table
			float: left
			font-size: 13px
			height: 65px
			padding: 0 10px
			width: 20%

			&.edit
				display: block
				height: 75px

				.info
					display: block

				textarea
					height: 40px

			.info
				display: table-cell
				vertical-align: top

				.bpp
					color: $color('gray', 'pale')
					display: inline-block
					font-size: 40px
					margin: 20px 0 10px 20px

				.capital
					color: $color('blue')
					display: inline-block
					font-size: 17px
					margin-top: -40px
					vertical-align: middle

				img
					height: 50px
					margin: 10px 0
					width: 50px

				span
					display: -webkit-box
					overflow: hidden
					-webkit-box-orient: vertical
					-webkit-line-clamp: 2

				textarea
					height: 40px

				&.docs
					i
						margin-top: -6px

					label
						color: $color('gray', 'pale')
						display: inline-block
						margin-right: 6px

				i
					&.pay-off
						margin-bottom: 10px

	label
		display: block
		margin-bottom: 5px

		&.detail
			color: $color('gray', 'pale')
